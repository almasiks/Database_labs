CREATE VIEW dept_dashboard AS
WITH emp_summary AS (
    SELECT dept_id, COUNT(*) AS employee_count, ROUND(AVG(salary)::numeric,2) AS avg_salary
    FROM employees
    GROUP BY dept_id
),
proj_summary AS (
    SELECT dept_id, COUNT(*) AS active_projects, SUM(budget) AS total_project_budget
    FROM projects
    GROUP BY dept_id
)
SELECT
    d.dept_name,
    d.location,
    COALESCE(e.employee_count,0) AS employee_count,
    COALESCE(e.avg_salary,0) AS avg_salary,
    COALESCE(p.active_projects,0) AS active_projects,
    COALESCE(p.total_project_budget,0) AS total_project_budget,
    ROUND(
        CASE WHEN COALESCE(e.employee_count,0) = 0 THEN 0
             ELSE COALESCE(p.total_project_budget,0)/e.employee_count
        END::numeric, 2
    ) AS budget_per_employee
FROM departments d
LEFT JOIN emp_summary e ON d.dept_id = e.dept_id
LEFT JOIN proj_summary p ON d.dept_id = p.dept_id;


